.scroll {
  display: flex;
  align-items: center;
  z-index: 140;

  @include tablets {
    display: none;
  }
}
.scroll__link {
  display: flex;
  font-size: 18px;
  &::after {
    display: block;
    content: "";
    background: svg-load("scroll.svg", fill=white, width=100%, height=100%) center center no-repeat;
    width: 28px;
    height: 30px;
    margin-left: 18px;
  }
}
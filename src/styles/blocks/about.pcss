.about {
    width: 100%;
    min-height: 100%;
    display: flex;
}
.about__container {
    display: flex;
    justify-content: center;
    align-items: center;
}
.about__col {
    display: flex;
    flex-flow: row nowrap;
    justify-content: center;
    align-items: center;
}
.about__me {
    background: red;
    width: 300px;
    height: 200px;
    margin-right: 150px;
}
.about__text {
    background: blue;
    width: 300px;
    height: 200px;
}
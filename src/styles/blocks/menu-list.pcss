.menu-list {
    display: flex;
    align-items: center;
    font-weight: 400;

}
.menu-list__item {
    margin-right: 60px;

    @include desktop {
        margin-right: 30px;
    }
    @include tablets {
        display: none;
    }
    &:last-child {
        margin-right: 0;
    }
}
.menu-list__link {
        &:hover {
        color: #ff9a00;
        padding-bottom: 20px;
        border-bottom: 2px solid #ff9a00;
    }
}
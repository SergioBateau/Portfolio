.hero {
  width: 100%;
  max-height: 1080PX;
  display: flex;
}
.hero__container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}
.hero__content {
  width: 600PX;
  height: 400PX;
  background: red;
}
.hero__scroll {
  width: 600PX;
  height: 100PX;
  background: green;
}


